<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Fragments.ClassDateFrag"
    android:background="#000000"
    android:orientation="vertical">

    <!-- TODO: Update blank fragment layout -->



    <TextView
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Classes (comma separated)"
        android:id="@+id/configure_class_tv"
        android:textColor="#ffffff"
        android:typeface="monospace"
        android:textSize="18sp"
        android:layout_weight="2"
        android:scrollIndicators="right"
        android:scrollbars="vertical"
        android:gravity="left|center_vertical" />
    <EditText
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:textColor="#ffffff"
        android:id="@+id/configure_class"
        android:layout_weight="8"
        android:layout_gravity="center_horizontal" />
    <TextView
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Subjects (comma separated)"
        android:id="@+id/configure_subjects_tv"
        android:textColor="#ffffff"
        android:typeface="monospace"
        android:textSize="18sp"
        android:layout_weight="2"
        android:scrollIndicators="right"
        android:scrollbars="vertical"
        android:gravity="left|center_vertical" />
    <EditText
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:textColor="#ffffff"
        android:id="@+id/configure_subjects"
        android:layout_weight="8"
        android:layout_gravity="center_horizontal" />

    <TextView
        android:id="@+id/mail_btn"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:text="Save"
        android:background="#009688"
        android:textColor="#ffffff"
        android:textSize="50dp"
        android:layout_gravity="center"
        android:padding="0dp"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        android:typeface="monospace"
        android:gravity="center"
        android:layout_weight="4" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:text="New Text"
        android:id="@+id/textView4"
        android:layout_weight="2"
        android:visibility="invisible" />

</LinearLayout>
